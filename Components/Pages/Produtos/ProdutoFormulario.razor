@page "/produtos/novo"
@rendermode InteractiveServer


@using AppExemplo.Models;
@inject ProdutoDAO produtoDao;
@inject NavigationManager Navigation;

<PageTitle>Produto - Novo</PageTitle>

<h1>Novo Produto</h1> <br />

@if (erro!= null) 
{
 <div class="alert alert-danger">
    @erro
 </div>
}

<div class="row">

    <div class="col">

        <form>
            <div class="form-grounp mb-4">

                <label>Nome</label>
                <input @bind="_novoProduto.Nome" type="text" class="form-control" name="nome" placeholder="Informe o nome do produto" />
            </div>

            <div class="form-grounp mb-4">

                <label>Quantidade</label>
                <input @bind="_novoProduto.Quantidade" type="text" class="form-control" name="Quantidade"  />
            </div>

            <div class="form-grounp mb-4">

                <label>Preço</label>
                <input @bind="_novoProduto.Preco" type="text" class="form-control" name="Preço"  />
            </div>

            <div class="form-grounp mb-4">

                <label>Descrição</label>
                <input @bind="_novoProduto.Descricao" type="text" class="form-control" name="Descrição" rows="5" />
            </div>

            <button  @onclick="Salvar" class="btn btn-primary">Salvar</button>
            
        </form>

    </div>

</div>


@code {
    private string? erro = null;

    private Produto _novoProduto = new();

    


    private void Salvar()
    {
        try
        {
            produtoDao.inserir(_novoProduto);

            Navigation.NavigateTo("/produtos");
        } catch (Exception ex)
        {
            erro = ex.Message; 
        }
    }
}
